
<h1>New Product</h1>

<%= form_tag '/products', method: :post do %>

<div>
  <%= label_tag :name %>
  <%= text_field_tag :name, @product.name%>
</div>
<div>
  <%= label_tag :price %>
  <%= text_field_tag :price, @product.price %>
</div>
<div>
 <%= label_tag :description %>
 <%= text_field_tag :description, @product.description%>
</div>

<%= form_for @product, url: products_path, html: { multipart: true } do |form| %>
  <%= form.file_field :avatar %>
<% end %>

<%= image_tag @user.avatar.url %>
<%= image_tag @user.avatar.url(:medium) %>
<%= image_tag @user.avatar.url(:thumb) %>

<%= submit_tag "Add Product" %>

<% end %>